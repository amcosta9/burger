<div class="container">

    <h1>Burgers!</h1>
    <div class="row">
        <div class="col s6">

            <h3>Burgers to Eat!</h3>
            <ul>
                {{#each foobar}}
                    {{#unless this.devoured}}
                        <li>
                            {{this.burger_name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                <button type="submit">Nom Nom Nom!</button>
                            </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col s6">

            <h3>Burgers GONE!</h3>

            <ul>
                {{#each foobar}}
                    {{#if this.devoured}}
                        <li>
                            {{this.burger_name}}

                            <!--<form action="/{{this.id}}?_method=PUT" method="POST">-->
                            <!--<input type="hidden" name="devoured" value="false">-->
                            <!--<button type="submit">Make another!</button>-->
                            <!--</form>-->
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div> <!-- /.row -->

    <h3>Add a Burger</h3>
    <form class="create-update-form" action="/index" method="POST">

        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
        </div>


        <button type="submit">Add Burger</button>
    </form>

</div> <!-- /.container -->
